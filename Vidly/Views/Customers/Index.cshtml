@using Vidly.Models
@model IEnumerable<Customer>
           
@{
    ViewBag.Title = "Customers List";
}

<h2>Customers</h2>
@if (Model.Any() == false)
{
    <p>Sorry, We have no customers yet.</p>
}
else
{
    <table class="table table-striped">
        <tr>
            <th>Customer Name</th>
            <th>Membership Type</th>
            <th>Discount Rate</th>
        </tr>
        @foreach (var customer in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(
                        customer.Name,
                        "Edit",
                        "Customers",
                        new
                        {
                            id = customer.Id,
                        },
                        new
                        {
                            @class = "btn"
                        }
                    )
                </td>
                <td>
                    <p>
                        @customer.MembershipType.Name
                    </p>
                </td>
                <td>
                    <p>
                        @customer.MembershipType.DiscountRate%
                    </p>
                </td>
            </tr>
        }
    </table>
}