@using Vidly.Models
@model IEnumerable<Customer>

@{
    ViewBag.Title = "Customers List";
}
<div class="row">
    <h2 class="col-sm-3">Customers List</h2>
    <div class="col-sm-2"></div>
    @Html.ActionLink("Add Customer",
                    "New",
                    "Customers",
                    null,
                            new { @class = "btn btn-primary", id = "new-btn" }
        )
</div>
@if (Model.Any() == false)
{
    <p>Sorry, We have no customers yet.</p>
}
else
{
    <table class="table table-striped">
        <tr>
            <th>Customer Name</th>
            <th>Membership Type</th>
            <th>Discount Rate</th>
        </tr>
        @foreach (var customer in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(
                        customer.Name,
                        "Edit",
                        "Customers",
                        new
                        {
                            id = customer.Id,
                        },
                        new
                        {
                            @class = "btn"
                        }
                    )
                </td>
                <td>
                    <p>
                        @customer.MembershipType.Name
                    </p>
                </td>
                <td>
                    <p>
                        @customer.MembershipType.DiscountRate%
                    </p>
                </td>
            </tr>
        }
    </table>
}